<?xml version="1.0" encoding="UTF-8" ?>
<Window
    x:Class="WinUIApp1.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:WinUIApp1"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
   
    >
 
    <StackPanel
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Orientation="Horizontal"
        >
        <TextBlock
        CanDrag="True"
        DragEnter="StackPanel_DragEnter"
        DragOver="StackPanel_DragOver"
            
            AllowDrop="True"
            Drop="TextBlock_Drop"
            DropCompleted="TextBlock_DropCompleted"
            Width="400" Height="400">播放</TextBlock>
        <Button
            x:Name="btnCount"
            Click="OnCountClicked">
            Click me
        </Button>
        <Button Click="Button_Click">播放</Button>
    </StackPanel>
</Window>
